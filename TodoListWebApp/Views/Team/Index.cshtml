@model IEnumerable<DOMAIN.Entities.Team>

@{
    ViewBag.Title = "All Teams";
}

<h2>All Teams</h2>

<p>
    @Html.ActionLink("Create New Team", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TeamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeamDescription)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TeamName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TeamDescription)
        </td>

        <td>
            @Html.ActionLink("Members", "Members", new { id = item.TeamID }) |
            @Html.ActionLink("Edit", "Edit", new { id=item.TeamID }) |
            @Html.ActionLink("Details", "Details", new { id=item.TeamID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TeamID })
        </td>
    </tr>
}

</table>
